<%layout("../layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h3 class="mb-2 mt-2 ">Add new Listing</h3>
    <form action="/listings/new" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title">Title: </label>
            <input type="text"  name="listing[title]" placeholder="title" class="form-control" required>
            <div class="valid-feedback"> Title looks good</div>
            <div class="invalid-feedback">Please enter Title</div>
        </div>

       <div class="mb-3">
        <label for="description">Description</label>
        <textarea name="listing[description]" id="" placeholder="enter the description" class="form-control" required></textarea> 
        <div class="valid-feedback"> Description looks good</div>
            <div class="invalid-feedback">Please enter Description</div>    
        </div>
        <div class="mb-3">
            <p>select category:</p>
            <%for(category of categories){%>
                <label ><input type="checkbox" name="listing[category]" class="form-check-input " value= <%=category%> 
                     > <%=category%></label>
            <%}%>
            
         
            
        </div>


       <div class="mb-3">
        <label for="listing[image]">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control" required>
        
        <div class="valid-feedback">OK</div>
        <div class="invalid-feedback">Please upload Image</div>  
        </div>
          
       <div class="mb-3">
        <label for="price"> Price</label>
        <input  type="number"   name="listing[price]" placeholder="price" class="form-control" required>
        <div class="valid-feedback">OK</div>
            <div class="invalid-feedback">Please enter Price</div>    
    </div>
 <div class="row">
        <div class="mb-3 col-md-5">
            <label for="Location">Location</label>
            
            
            <input type="text" name="listing[location]" placeholder="location" class="form-control" required>
            <div class="valid-feedback">OK</div>
            <div class="invalid-feedback">Please enter Location</div>
        </div>
        <div class="mb-5 col-md-7">
            <label for="country">country</label>
            <input type="text" name="listing[country]" placeholder="country" class="form-control" required>
            <div class="valid-feedback">OK</div>
            <div class="invalid-feedback">Please enter Country</div>
        </div>
     </div>

 <button class="btn btn-dark mb-2 add-btn">Add</button>
    </form>
</div> 
</div>
</body>
